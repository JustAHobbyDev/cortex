{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://cortex.local/templates/spec_registry_v0.schema.json",
  "title": "Spec Registry v0",
  "type": "object",
  "required": [
    "version",
    "domains"
  ],
  "additionalProperties": false,
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^v[0-9]+$"
    },
    "domains": {
      "type": "array",
      "minItems": 1,
      "items": {
        "$ref": "#/$defs/domain"
      }
    },
    "orphan_spec_patterns": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "maxItems": 20
    }
  },
  "$defs": {
    "domain": {
      "type": "object",
      "required": [
        "id",
        "name",
        "required",
        "severity",
        "spec_patterns",
        "source_patterns"
      ],
      "additionalProperties": false,
      "properties": {
        "id": {
          "type": "string",
          "pattern": "^[a-z0-9][a-z0-9_-]{1,63}$"
        },
        "name": {
          "type": "string",
          "minLength": 1,
          "maxLength": 120
        },
        "required": {
          "type": "boolean"
        },
        "severity": {
          "type": "string",
          "enum": [
            "block",
            "warn"
          ]
        },
        "spec_patterns": {
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string",
            "minLength": 1
          },
          "maxItems": 20
        },
        "source_patterns": {
          "type": "array",
          "items": {
            "type": "string",
            "minLength": 1
          },
          "maxItems": 40
        }
      }
    }
  }
}
